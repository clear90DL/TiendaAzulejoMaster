<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="loginPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>com.todocodeacademy.login.logica.Usuario</class>
    <class>com.todocodeacademy.login.logica.Rol</class>
    <class>com.todocodeacademy.login.logica.Clientes</class>
    <class>com.todocodeacademy.login.logica.Proveedor</class>
    <class>com.todocodeacademy.login.logica.Productos</class>
    <class>com.todocodeacademy.login.logica.Categorias</class>
    <class>com.todocodeacademy.login.logica.Venta_exitosa</class>
    <class>com.todocodeacademy.login.persistencia.NewEntity</class>
    <shared-cache-mode>ALL</shared-cache-mode>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/login?serverTimezone=UTC"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value=""/>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
